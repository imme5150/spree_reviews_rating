<% if @product.reviews_count > 0 %>
<div class="rating">
	<p><%= t('average_customer_rating') %>: </p>
	<div id="star" data-rating="<%= @product.stars || 0 %>"></div>
	<p>(<%= t('based_upon') %> <%= @product.reviews_count %> <%= t('reviews') %>)</p>
	<div itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
		<meta itemprop="ratingValue" content="<%= @product.stars %>" />
		<meta itemprop="reviewCount" content="<%= @product.reviews_count %>" />
	</div>
</div>
<% end %>
